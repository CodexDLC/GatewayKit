# env.sample

# --- Log Level ---
LOG_LEVEL=INFO

# --- PostgreSQL ---
DB_USER=devuser
DB_PASSWORD=devpass
DB_NAME=game
DB_HOST=postgres
DB_PORT=5432

# --- Redis ---
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=devpass

# ===== RabbitMQ (dev) =====
RABBITMQ_USER=devuser
RABBITMQ_PASS=devpass

# --- Auth Service Settings ---
# JWT
JWT_SECRET=your-super-secret-and-long-key-that-is-at-least-32-bytes
AUTH_ACCESS_TTL=1800
AUTH_REFRESH_TTL=1209600
AUTH_JWT_ISS=core-auth
AUTH_JWT_AUD=game-clients

# --- RPC Settings ---
RPC_TIMEOUT_MS=5000
RPC_RETRY_DELAY_MS=5000
RPC_MAX_RETRIES=3

# --- Gateway Settings ---
GATEWAY_CORS_ALLOWED_ORIGINS="*"
GATEWAY_WS_PING_INTERVAL=30
GATEWAY_WS_IDLE_TIMEOUT=120
AUTH_HEADER="Authorization"
AUTH_PASSWORD_BCRYPT_ROUNDS=12